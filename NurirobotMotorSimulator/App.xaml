    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NurirobotMotorSimulator"
    RequiresPointerMode="Auto">
    <Application.Resources>
        <ResourceDictionary>
            <!--  Color Resources  -->
